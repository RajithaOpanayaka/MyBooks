<%-include("../partials/header") %>
<h1>Welcome to the index page</h1>

<a class="ui primary button" href="/books/new">Add New Book</a>

<% books.forEach(function(book){ %>
	<div>
		<h1><%=book.title%></h1>
		<%=book.author %>
		<p><%=book.description%></p>
		<a class="ui blue basic button" href="/books/<%=book._id%>">Show more</a>
	</div>
	<hr>
<% }) %>

<%-include("../partials/footer") %>